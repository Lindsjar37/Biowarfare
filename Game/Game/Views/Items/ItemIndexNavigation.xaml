<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Game.Views" xmlns:local1="clr-namespace:Game.Views.Items"
            x:Class="Game.Views.Items.ItemIndexNavigation"
            BarBackgroundColor="{StaticResource PrimaryItemMidground}"
            BarTextColor="{StaticResource PrimaryItemBackground}"
            SelectedTabColor="{StaticResource PrimaryItemForeground}"
            >

    <NavigationPage.TitleView>
        
        <Label Style="{StaticResource NavLabel}"
               Text="Item Index" 
               />
        
    </NavigationPage.TitleView>


    <local:ItemIndexPage Title="Equipable"/>
    <local1:ConsumableItemIndexPage Title="Consumable"/>
    <local1:UniqueItemIndexPage Title="Unique Drop"/>
    
</TabbedPage>