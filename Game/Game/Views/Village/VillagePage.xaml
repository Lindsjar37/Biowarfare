<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.VillagePage"
             >


    <NavigationPage.TitleView>
        <Label Text="Immune System" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Title"/>
    </NavigationPage.TitleView>


    <ContentPage.Content>

        <ScrollView Orientation="Vertical" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never" Padding="10">

            <FlexLayout x:Name="flexLayout"
                        Wrap="Wrap"
                        JustifyContent="SpaceAround"
                        AlignContent="SpaceAround">

                <StackLayout Style="{StaticResource CardImageTextBox}">


                    

                        <ImageButton
                            Source="character_button.png"
                            Style="{StaticResource ImageLargeStyle}"
                            Clicked="CharactersButton_Clicked"/>
                   

                    

                        <Label 
                                Text="Characters"
                                Style="{StaticResource CellNameLabelStyle}"
                                TextColor="{StaticResource SecondaryAccentColor}"
                                />

                   


                </StackLayout>

                <StackLayout Style="{StaticResource CardImageTextBox}">

                    <ImageButton
                                Source="monster_button.png"
                                Style="{StaticResource ImageLargeStyle}"
                                Clicked="MonstersButton_Clicked"/>

                   
                        
                        <Label 
                                Text="Monsters"
                                Style="{StaticResource CellNameLabelStyle}"
                                TextColor="{StaticResource SecondaryAccentColor}"
                            />
                   


                </StackLayout>


                <StackLayout Style="{StaticResource CardImageTextBox}">

                    <ImageButton
                                Source="items_button.png"
                                Style="{StaticResource ImageLargeStyle}"
                                Clicked="ItemsButton_Clicked"/>

                  

                        <Label 
                                Text="Items"
                                Style="{StaticResource CellNameLabelStyle}"
                                TextColor="{StaticResource SecondaryAccentColor}"
                                />

                  
                </StackLayout>


                <StackLayout Style="{StaticResource CardImageTextBox}">

                    <ImageButton
                                Source="scores_button.png"
                                Style="{StaticResource ImageLargeStyle}"
                                Clicked="ScoresButton_Clicked"/>

                    
                        
                        <Label 
                                Text="Scores"
                                Style="{StaticResource CellNameLabelStyle}"
                                TextColor="{StaticResource SecondaryAccentColor}"
                                />

                   

                </StackLayout>

            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>