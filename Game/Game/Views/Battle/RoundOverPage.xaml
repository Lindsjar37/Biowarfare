<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.RoundOverPage">

    
    <ContentPage.Content>

        <AbsoluteLayout
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        >

            <StackLayout Style="{StaticResource VerticalStack}"
                    AbsoluteLayout.LayoutBounds="1,1,1,1" 
                    AbsoluteLayout.LayoutFlags="All">

                <ScrollView x:Name="ScrollView">

                    <StackLayout Style="{StaticResource VerticalStack}">

                        <Label Text="Round Cleared" x:Name="PageTitle" Style="{StaticResource CenterMessageLargeStyle}"/>


                        <StackLayout Style="{StaticResource HorizontalStack}">
                            <Frame Style="{StaticResource BasicScoreFrameStyle}" Padding="10">
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Round :" Style="{StaticResource VillagePageLabelStyle}"/>
                                    <Label Text="0" x:Name="TotalRound" Style="{StaticResource VillagePageLabelStyle}"/>
                                </StackLayout>
                            </Frame>

                        </StackLayout>
                        
                        <Frame Style="{StaticResource BasicScoreFrameStyle}" 
                               Padding="10" 
                               HorizontalOptions="StartAndExpand"
                               Margin="0,20,0,20">
                            <Label Text="Cells" Style="{StaticResource VillagePageLabelStyle}"/>
                        </Frame>
                        
                        <FlexLayout x:Name="CharacterListFrame"
                                    JustifyContent="Center"
                                    AlignContent="Start"
                                    Wrap="Wrap"/>

                        <Button Text="Continue"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Clicked="CloseButton_Clicked"/>

                    </StackLayout>
                </ScrollView>
            </StackLayout>


            <!--POPUP FRAME-->
            <Frame Style="{StaticResource ReadPagePopupStyle}"
                   x:Name="CharacterPopUpFrame"
                   IsVisible="False"
                   >

                <StackLayout Style="{StaticResource PopupStackLayoutStyle}">

                    <ImageButton Style="{StaticResource ClosePopupButtonStyle}"
                                 Source="icon_cancel.png"
                                 Clicked="ClosePopup_Clicked"/>

                    <Frame Style="{StaticResource PopupTitleFrameStyle}">

                        <Label Style="{StaticResource EquipPopupLabelStyle}"
                               Text="Name goes here, I guess"
                               x:Name="CharacterPopUpName"
                               />

                    </Frame>

                    <Frame Style="{StaticResource ItemImageCircleFrameStyle}">

                        <Image x:Name="CharacterPopUpImage"
                               />

                    </Frame>

                    <Grid Padding="10" RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Style="{StaticResource PopupBoldAttributeLabelStyle}"
                               Text="Cell Type: "
                               Grid.Row="0"
                               Grid.Column="0"
                               />

                        <Label Style="{StaticResource PopupAttributeLabelStyle}"
                               x:Name="CharacterPopupCellType"
                               FontAttributes="Bold"
                               Grid.Row="0"
                               Grid.Column="1"
                               />

                        <Label Style="{StaticResource PopupBoldAttributeLabelStyle}"
                               Text="Level: "
                               Grid.Row="1"
                               Grid.Column="0"
                               />

                        <Label Style="{StaticResource PopupAttributeLabelStyle}"
                               x:Name="CharacterPopupLevel"
                               FontAttributes="bold"
                               Grid.Row="1"
                               Grid.Column="1" 
                               />

                    </Grid>

                    <Frame  Style="{StaticResource InvisibleReadFrameStyle}"
                            BackgroundColor="AliceBlue"
                            Padding="10"
                            x:Name="AttributeFrame"
                            CornerRadius="20"
                            IsVisible="True"
                                >

                        <StackLayout>
                            <Frame Style="{StaticResource PopupTitleFrameStyle}"
                                   Padding="40, 0">

                                <Label Style="{StaticResource EquipPopupLabelStyle}"
                                       Text="Attribute"
                                       FontSize="Default"
                                        />

                            </Frame>

                            <Grid ColumnSpacing="25" 
                                  RowSpacing="5" 
                                  Margin="0, 0"
                                  >

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="attack_icon.png" 
                                       WidthRequest="35" 
                                       Grid.Row="1" 
                                       Grid.Column="0" 
                                       />

                                <Label x:Name="Attack"
                                       Style="{StaticResource ReadStatsLabelStyle}"
                                       Grid.Row="2" 
                                       Grid.Column="0" 
                                       />

                                <Image Source="defense_icon.png" 
                                       WidthRequest="35" 
                                       Grid.Row="1" 
                                       Grid.Column="1" 
                                       />

                                <Label x:Name="Defense"
                                       Style="{StaticResource ReadStatsLabelStyle}"
                                       Grid.Row="2" 
                                       Grid.Column="1" 
                                       />

                                <Image Source="speed_icon.png" 
                                       WidthRequest="35" 
                                       Grid.Row="1" 
                                       Grid.Column="2" 
                                       />

                                <Label x:Name="Speed"
                                       Style="{StaticResource ReadStatsLabelStyle}"
                                       Grid.Row="2" 
                                       Grid.Column="2" 
                                       />

                                <Image Source="heart_icon.png" 
                                       WidthRequest="35" 
                                       Grid.Row="1" 
                                       Grid.Column="3" 
                                       />

                                <Label x:Name="Health"
                                       Style="{StaticResource ReadStatsLabelStyle}"
                                       Grid.Row="2" 
                                       Grid.Column="3" 
                                       />

                                <Image Source="xp_icon.png" 
                                       WidthRequest="35" 
                                       Grid.Row="1" 
                                       Grid.Column="4" 
                                       />

                                <Label x:Name="Experience"
                                       Style="{StaticResource ReadStatsLabelStyle}"
                                       Grid.Row="2" 
                                       Grid.Column="4" 
                                       />

                            </Grid>

                        </StackLayout>
                    </Frame>

                </StackLayout>
            </Frame>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>