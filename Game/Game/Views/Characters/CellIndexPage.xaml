<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.CellIndexPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="CreateCell_Clicked" IconImageSource="icon_add.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Style="{StaticResource OuterBoxStack}">

            <Label Text="Items List Page" Style="{StaticResource HeaderStyle}"/>

            <ListView x:Name="ItemsListView" 
                    ItemsSource="{Binding Dataset}"
                    IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    RefreshCommand="{Binding LoadItemsCommand}"
                    CachingStrategy="RecycleElement"
                    ItemSelected="OnItemSelected"
                    HasUnevenRows="true"
                    Margin="5,0,5,0"
                    RowHeight="80"
                    >

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BorderColor="LightGray" WidthRequest="250" HeightRequest="300" BackgroundColor="LightGray"
                            CornerRadius="20" Margin="0, 20, 0, 0" >
                                <Grid ColumnSpacing="5" RowSpacing="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Frame BorderColor="LightGray" WidthRequest="150" HeightRequest="150" BackgroundColor="LightGray"
                                        CornerRadius="20" Margin="0, 20, 0, 0" >

                                        <Ellipse Fill="white" WidthRequest="150" HeightRequest="150" Grid.Row="1" HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="CenterAndExpand" Margin="7"/>
                                    </Frame>
                                    
                                    <Frame BorderColor="White" BackgroundColor="White" WidthRequest="200" HeightRequest="140" CornerRadius="20">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="AUTO"/>
                                                    <RowDefinition Height="AUTO"/>
                                                    <RowDefinition Height="AUTO"/>
                                                    <RowDefinition Height="AUTO"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Label Text="Stats" Grid.Row="0" HorizontalOptions="Center" Padding="10"/>

                                                <Label Text="Atk" Grid.Row="1" Margin="10, 5" />
                                                <ProgressBar Progress="0.5" Margin="40, 5"  Grid.Row="1" />

                                                <Label Text="Def" Grid.Row="2" Margin="10, 5" />
                                                <ProgressBar Progress="0.5" Margin="40, 5" Grid.Row="2"/>

                                                <Label Text="Spd" Grid.Row="3" Margin="10, 5" />
                                                <ProgressBar Progress="0.5" Margin="40, 5" Grid.Row="3"/>

                                            </Grid>
                                        </Frame>



                                        <!--<Image  Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                                        Source="{Binding ImageURI}"
                                        Style="{StaticResource ImageMediumStyle}"
                                        VerticalOptions="CenterAndExpand"/>-->

                                    <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Name}" 
                                       Style="{StaticResource ListStyle}"/>

                                    <StackLayout Grid.Column="1" Grid.Row="1"
                                    Orientation="Horizontal">

                                        <Label 
                                       Text="{Binding Attribute}" 
                                       Style="{StaticResource ListStyle}"/>

                                        <Label Text="{Binding Value}" 
                                        Style="{StaticResource ListStyle}"/>

                                    </StackLayout>

                                    <Label Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Job}" 
                                       Style="{StaticResource ListStyle}"
                                       FontSize="Micro"/>

                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

