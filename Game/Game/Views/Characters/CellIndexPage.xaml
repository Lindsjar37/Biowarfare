<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Characters.CellIndexPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Frame BorderColor="LightGray" WidthRequest="250" HeightRequest="300" BackgroundColor="LightGray"
                   CornerRadius="20" Margin="0, 20, 0, 0" >

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>
                        <Frame BorderColor="LightGray" WidthRequest="150" HeightRequest="150" BackgroundColor="LightGray"
                            CornerRadius="20" Margin="0, 20, 0, 0" >
                        
                            <Ellipse Fill="white" WidthRequest="150" HeightRequest="150" Grid.Row="1" HorizontalOptions="CenterAndExpand"
                                     VerticalOptions="CenterAndExpand" Margin="7"/>
                        </Frame>
                        
                        <Frame BorderColor="White" WidthRequest="200" HeightRequest="100" BackgroundColor="White"
                            CornerRadius="20" Margin="0, 180, 0, 0" >
                        </Frame>

                    </Grid>
                    

                </Frame>

                <Frame BorderColor="LightGray" WidthRequest="250" HeightRequest="300" BackgroundColor="LightGray"
                   CornerRadius="20" Margin="0, 20, 0, 0" >

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>
                        <Frame BorderColor="LightGray" WidthRequest="150" HeightRequest="150" BackgroundColor="LightGray"
                            CornerRadius="20" Margin="0, 20, 0, 0" >

                            <Ellipse Fill="white" WidthRequest="150" HeightRequest="150" Grid.Row="1" HorizontalOptions="CenterAndExpand"
                                     VerticalOptions="CenterAndExpand" Margin="7"/>
                        </Frame>

                        <Frame BorderColor="White" WidthRequest="200" HeightRequest="100" BackgroundColor="White"
                            CornerRadius="20" Margin="0, 180, 0, 0" >
                        </Frame>

                    </Grid>


                </Frame>

                <Frame BorderColor="LightGray" WidthRequest="250" HeightRequest="300" BackgroundColor="LightGray"
                   CornerRadius="20" Margin="0, 20, 0, 0" >

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="AUTO" />
                            <RowDefinition Height="AUTO" />
                        </Grid.RowDefinitions>
                        <Frame BorderColor="LightGray" WidthRequest="150" HeightRequest="150" BackgroundColor="LightGray"
                            CornerRadius="20" Margin="0, 20, 0, 0" >

                            <Ellipse Fill="white" WidthRequest="150" HeightRequest="150" Grid.Row="1" HorizontalOptions="CenterAndExpand"
                                     VerticalOptions="CenterAndExpand" Margin="7"/>
                        </Frame>

                        <Frame BorderColor="White" WidthRequest="200" HeightRequest="100" BackgroundColor="White"
                            CornerRadius="20" Margin="0, 180, 0, 0" >
                        </Frame>

                    </Grid>


                </Frame>

            </StackLayout>
            
            
            
            
            
            
            
            
            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>