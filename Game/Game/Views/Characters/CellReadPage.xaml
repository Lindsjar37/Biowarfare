<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.CellReadPage"
             Title ="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" 
                     IconImageSource="icon_delete.png" 
                     Clicked="Delete_Clicked" 
                     />
        
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            
            <Frame Style="{StaticResource MediumSquareMidgroundFrame}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="AUTO" />
                        <RowDefinition Height="AUTO" />
                    </Grid.RowDefinitions>

                    <BoxView Style="{StaticResource PrimaryBoxViewStyle}"
                             Grid.Row="0"
                             Margin="0, 10, 0, 200" 
                             >
                        
                    </BoxView>
                    
                    <StackLayout Orientation="Horizontal" 
                                 Grid.Row="0" 
                                 HorizontalOptions="CenterAndExpand"
                                 Margin="0, 12, 0, 0"
                                 >

                        <Label Text="{Binding Data.Job}" 
                               Style="{StaticResource CellNameLabelStyle}"
                               />
                        
                        <Label Text="|" 
                               Style="{StaticResource CellNameLabelStyle}"
                               />
                        
                        <Label Text="{Binding Data.Level, StringFormat= 'Lvl.{0}'}" 
                               Style="{StaticResource CellNameLabelStyle}"
                               />

                    </StackLayout>



                    <!--Frame for thumbnail-->
                    <Frame Style="{StaticResource LargeCircleFrameStyle}"
                           Margin="0, 50, 0, 0" 
                           >

                        <Image Source="{Binding Data.ImageURI}">

                        </Image>
                    </Frame>
                </Grid>
            </Frame>

            <Frame Style="{StaticResource MediumRectangleMidgroundFrame}"
                   Margin="0, 20, 0, 0" 
                   >
                   
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <BoxView Style="{StaticResource PrimaryBoxViewStyle}"
                             Grid.Row="0"
                             Margin="0, 10, 0, 0" 
                             >
                        
                    </BoxView>

                    <Label Style="{StaticResource CellNameLabelStyle}"
                           Text="Items" 
                           Grid.Row="0" 
                           Margin="0, 12, 0, 0"
                           />

                </Grid>
            </Frame>

            <Button Style="{StaticResource PrimaryButtonStyle}"
                    Text="Edit" 
                    Margin="20" 
                    Clicked="CellEditButton_Clicked" 
                    />
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>